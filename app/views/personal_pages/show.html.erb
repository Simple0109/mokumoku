<div class="card">
  <!-- Card header -->
  <div class="card-header">
    <h3 class="mb-0">プロフィール</h3>
  </div>
  <!-- Card body -->
  <div class="card-body">
      <div class="d-lg-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center mb-4 mb-lg-0">
          <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
          <div class="ms-3">
            <h4 class="mb-3"><%= @user.name %></h4>
          </div>
        </div>
      </div>
      <% if current_user.following?(@user) %>
        <%= link_to "フォローを外す", user_following_path(@user), method: :delete, class: "btn btn-danger" %>
      <%else%>
        <%= link_to "フォローする", user_followings_path(@user), method: :post, class: "btn btn-success" %>
      <%end%>
    <hr class="my-5">
    <div>
      <h4 class="mb-0">Personal Details</h4>
        <div class="mb-3">
          <%= "hobby: #{@user.hobby}" %>
        <div class="mb-3">
          <%= "profile: #{@user.profile}" %>
        </div>
    </div>
  </div>
</div>
